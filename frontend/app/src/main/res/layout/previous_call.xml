<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="95dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    android:maxWidth="330dp"
    android:maxHeight="100dp"
    android:minWidth="50dp"
    android:minHeight="100dp"
    app:cardBackgroundColor="#5C6BC0"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:layout_maxHeight="100dp"
    app:layout_maxWidth="330dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/previousCallNumber"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="(920) 420-8162" />

            <TextView
                android:id="@+id/previousCallDateTime"
                android:layout_width="211dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                tools:text="Nov 8, 8:45PM" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/previousCallQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="What are your hours tonight?" />
    </LinearLayout>
</androidx.cardview.widget.CardView>