<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ChooseLanguage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/I_speak"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/arButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arabic // اللغة العربية"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/zhButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese // 中文"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/enButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/frButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="French // français"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/hiButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hindi // हिंदी"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/itButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italian // italiano"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/jaButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Japanese // 日本語"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/koButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Korean // 한국어"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/ptButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portuguese // português"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/ruButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Russian // русский"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/esButtonBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spanish // español"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
