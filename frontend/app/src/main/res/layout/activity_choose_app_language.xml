<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ChooseAppLanguage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <Button
                android:id="@+id/arButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arabic // اللغة العربية"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/zhButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chinese // 中文"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/enButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/frButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="French // français"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/hiButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hindi // हिंदी"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/itButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Italian // italiano"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/jaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Japanese // 日本語"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/koButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Korean // 한국어"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/ptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portuguese // português"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/ruButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Russian // русский"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/esButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spanish // español"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/swButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swahili // kiswahili"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
